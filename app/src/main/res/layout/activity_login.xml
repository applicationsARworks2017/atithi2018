<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context="com.mars.myguest.Activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/main_rel"
        android:layout_centerVertical="true">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/rel"
        android:layout_centerVertical="true"
        android:background="@drawable/newline">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/username"
            android:layout_marginTop="20dp"
            android:hint="Mobile Number"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/username"
            android:id="@+id/password"
            android:hint="Login Pin"/>

    </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rel"
            android:id="@+id/signin"
            android:src="@mipmap/ic_arrow_back_white_24dp"
            android:backgroundTint="@color/buttonlogin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-20dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/custombutton"
        android:layout_below="@id/main_rel"
        android:id="@+id/register_btn"
        android:layout_marginLeft="10dp"
        android:textColor="@color/red"
        android:text="Register"/>

</RelativeLayout>
